{
    "compilerOptions": {
	"target"            : "es5",
	"lib"               : ["es2019", "dom"],
	"module"            : "commonjs",
	"declaration"       : true,
	"declarationMap"    : true,
	"outDir"            : "./dist/",
	"rootDir"           : "./",
	"strict"            : true,
	"alwaysStrict"      : true,
	"preserveSymlinks"  : true,
	// "noUnusedLocals"    : true,
	// "noUnusedParameters": true,
	"esModuleInterop"   : true
    },
    "exclude": [
	"node_modules",
	"dist"
    ]
}
